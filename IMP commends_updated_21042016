################list of vgs filesystems#############


lspv | awk '{ print $1, $3 }' | while read hd vg
do
        lspv -l $hd                     \
                | grep -v "N/A"         \
                | grep -v ":"           \
                | grep -v NAME          \
                | awk -v vg="$vg" -v hd="$hd" '{ print "HD: ", hd, "VG: ", vg, " VOL: ", $1, " Mount: ", $5 }'
done

################list of vgs filesystems#############END

################LVM Setup in aix #####################

1.create volumegroup 
2.Create Physical volume if exits 
    ---pvcreate
3 add PV to volumegroup 
   ---vgextend <groupname> <pvs>
4 create lv by 

    lvcreate -L <Size> -n <lv_name> <volume gp name>

5.create file system 

mkfs.ext4 /dev/mapper/<newly created lv>

6.create mount point 

7.mount -a 

###########################END############################

